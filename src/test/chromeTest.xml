<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ChromeTest" preserve-order="true">
    <parameter name="browser" value="Chrome"></parameter>
    <test name="Large1200_1599px" preserve-order="true">
        <parameter name="x" value="1200"></parameter>
        <parameter name="y" value="1599"></parameter>
        <groups>
            <run>
                <include name="Chrome"/>
            </run>
        </groups>
        <classes>
            <class name="WebTests.FeaturedMarqueTest">
                <methods>
                    <include name="componentExists"/>
                    <include name="playButtonOpacity"/>
                    <include name="videoContainer"/>
                    <include name="videoContainerClose"/>
                    <include name="downButton"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Medium992_1199px" preserve-order="true">
        <parameter name="x" value="992"></parameter>
        <parameter name="y" value="1199"></parameter>
        <groups>
            <run>
                <include name="Chrome"/>
            </run>
        </groups>
        <classes>
            <class name="WebTests.FeaturedMarqueTest">
                <methods>
                    <include name="componentExists"/>
                    <include name="playButtonOpacity"/>
                    <include name="videoContainer"/>
                    <include name="videoContainerClose"/>
                    <include name="downButton"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
