<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="FirefoxTest">
    <test name="Large1200_1599px">
        <parameter name="x" value="1200"></parameter>
        <parameter name="y" value="1599"></parameter>
        <groups>
            <run>
                <include name="Firefox"/>
            </run>
        </groups>
        <classes>
            <class name="WebTests.FeaturedMarqueTest">
                <methods>
                    <include name="componentExists"/>
                    <include name="playButtonOpacityTest"/>
                    <include name="videoContainerTest"/>
                    <include name="videoContainerCloseTest"/>
                    <include name="downButtonTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Medium992_1199px">
        <parameter name="x" value="992"></parameter>
        <parameter name="y" value="1199"></parameter>
        <groups>
            <run>
                <include name="Firefox"/>
            </run>
        </groups>
        <classes>
            <class name="WebTests.FeaturedMarqueTest">
                <methods>
                    <include name="componentExists"/>
                    <include name="playButtonOpacityTest"/>
                    <include name="videoContainerTest"/>
                    <include name="videoContainerCloseTest"/>
                    <include name="downButtonTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
