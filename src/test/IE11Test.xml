<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="InternetExplorerTest">
    <parameter name="browser" value="IE"></parameter>

    <test name="Large1600_768px" preserve-order="true">
        <parameter name="x" value="1200"></parameter>
        <parameter name="y" value="768"></parameter>
        <groups>
            <run>
                <include name="InternetExplorer"/>
            </run>
        </groups>
        <classes>
            <class name="WebTests.FeaturedMarqueTest">
                <methods>
                    <include name="componentExists"/>
                    <include name="playButtonOpacity"/>
                    <include name="videoContainer"/>
                    <include name="videoContainerClose"/>
                    <include name="downButton"/>
                </methods>
            </class>
        </classes>
    </test>

